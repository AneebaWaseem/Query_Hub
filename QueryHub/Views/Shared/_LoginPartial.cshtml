@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class=" btn btn-primary text-decoration-none">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class=" btn btn-outline-primary text-decoration-none" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="ms-2 btn btn-primary text-decoration-none me-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
